<Window x:Class="WhereIsMyCursor.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定 - WhereIsMyCursor"
        Width="420" Height="340"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0"
                   Text="動態托盤圖示設定"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- 啟用動態圖示 -->
        <CheckBox Grid.Row="1"
                  x:Name="EnableDynamicIconCheckBox"
                  Content="啟用動態托盤圖示"
                  Margin="0,0,0,10"
                  VerticalContentAlignment="Center"/>

        <!-- 更新頻率 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="更新頻率："
                       VerticalAlignment="Center"
                       Width="100"/>
            <ComboBox x:Name="FrequencyComboBox"
                      Width="150"
                      VerticalContentAlignment="Center">
                <ComboBoxItem Content="低 (2 FPS，省電)" Tag="Low"/>
                <ComboBoxItem Content="中 (10 FPS，建議)" Tag="Medium"/>
                <ComboBoxItem Content="高 (30 FPS，流暢)" Tag="High"/>
            </ComboBox>
        </StackPanel>

        <!-- 位置偏移設定 -->
        <GroupBox Grid.Row="3" Header="托盤圖示位置校正" Margin="0,5,0,10" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="X 偏移 (右→左)："
                               VerticalAlignment="Center"
                               Width="100"/>
                    <TextBox x:Name="OffsetXTextBox"
                             Width="80"
                             VerticalContentAlignment="Center"/>
                    <TextBlock Text=" px"
                               VerticalAlignment="Center"
                               Foreground="Gray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Y 偏移 (上→下)："
                               VerticalAlignment="Center"
                               Width="100"/>
                    <TextBox x:Name="OffsetYTextBox"
                             Width="80"
                             VerticalContentAlignment="Center"/>
                    <TextBlock Text=" px"
                               VerticalAlignment="Center"
                               Foreground="Gray"/>
                </StackPanel>
                <TextBlock Text="提示：若箭頭方向不準確，請調整偏移值直到箭頭正確指向托盤圖示"
                           TextWrapping="Wrap"
                           Foreground="Gray"
                           FontSize="11"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- 說明 -->
        <TextBlock Grid.Row="4"
                   Text="箭頭顏色代表與游標的距離 (10 級漸層)：&#x0a;• 紅色：最近 (0px)  →  綠色：最遠 (&gt;4000px)"
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   FontSize="11"
                   Margin="0,5,0,0"/>

        <!-- 按鈕 -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="OkButton"
                    Content="確定"
                    Width="80"
                    Height="28"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="取消"
                    Width="80"
                    Height="28"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
