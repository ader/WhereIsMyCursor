<Window x:Class="WhereIsMyCursor.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="ThisWindow"
        Title="設定 - WhereIsMyCursor"
        Width="500" Height="440"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0"
                   x:Name="HeaderText"
                   Text="動態托盤圖示設定"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- 啟用閃爍效果 -->
        <CheckBox Grid.Row="1"
                  x:Name="EnableBlinkCheckBox"
                  Content="啟用閃爍效果 (近距離閃爍提示)"
                  Margin="0,0,0,8"
                  VerticalContentAlignment="Center"/>

        <!-- 開機自動啟動 -->
        <CheckBox Grid.Row="2"
                  x:Name="AutoStartCheckBox"
                  Content="開機時自動啟動"
                  Margin="0,0,0,10"
                  VerticalContentAlignment="Center"/>

        <!-- 更新頻率 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="FrequencyLabel"
                       Text="更新頻率："
                       VerticalAlignment="Center"
                       Width="120"/>
            <ComboBox x:Name="FrequencyComboBox"
                      Width="230"
                      VerticalContentAlignment="Center">
                <ComboBoxItem x:Name="FrequencyLowItem" Content="低 (2 FPS，省電)" Tag="Low"/>
                <ComboBoxItem x:Name="FrequencyMediumItem" Content="中 (10 FPS，建議)" Tag="Medium"/>
                <ComboBoxItem x:Name="FrequencyHighItem" Content="高 (30 FPS，流暢)" Tag="High"/>
            </ComboBox>
        </StackPanel>

        <!-- 語言設定 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="LanguageLabel"
                       Text="語言："
                       VerticalAlignment="Center"
                       Width="120"/>
            <ComboBox x:Name="LanguageComboBox"
                      Width="230"
                      VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- 位置偏移設定 -->
        <GroupBox Grid.Row="5" x:Name="PositionGroup" Header="托盤圖示位置校正" Margin="0,5,0,10" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock x:Name="OffsetXLabel"
                               Text="X 偏移 (右→左)："
                               VerticalAlignment="Center"
                               Width="140"/>
                    <TextBox x:Name="OffsetXTextBox"
                             Width="80"
                             VerticalContentAlignment="Center"/>
                    <TextBlock x:Name="OffsetXUnit"
                               Text=" px"
                               VerticalAlignment="Center"
                               Foreground="Gray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="OffsetYLabel"
                               Text="Y 偏移 (上→下)："
                               VerticalAlignment="Center"
                               Width="140"/>
                    <TextBox x:Name="OffsetYTextBox"
                             Width="80"
                             VerticalContentAlignment="Center"/>
                    <TextBlock x:Name="OffsetYUnit"
                               Text=" px"
                               VerticalAlignment="Center"
                               Foreground="Gray"/>
                </StackPanel>
                <TextBlock x:Name="PositionHintText"
                           Text="提示：若箭頭方向不準確，請調整偏移值直到箭頭正確指向托盤圖示"
                           TextWrapping="Wrap"
                           Foreground="Gray"
                           FontSize="11"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- 按鈕 -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="OkButton"
                    Content="確定"
                    Width="80"
                    Height="28"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="取消"
                    Width="80"
                    Height="28"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
