<Window x:Class="WhereIsMyCursor.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize">
    <!--
    覆蓋視窗：
    - 全螢幕透明視窗，用於顯示視覺效果
    - 滑鼠穿透，不干擾使用者操作
    - 支援多螢幕環境
    -->
    <Canvas x:Name="EffectCanvas">
        <!-- 箭頭和螢光效果會在程式碼中動態加入 -->
    </Canvas>
</Window>
